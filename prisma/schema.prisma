generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üçΩÔ∏è Mod√®le pour les r√©servations de restaurant
model Reservation {
  id        String   @id @default(cuid())  // ID unique automatique
  
  // üìÖ Informations de r√©servation
  date      DateTime                       // Date de la r√©servation
  time      String                         // Heure (ex: "19:30")
  guests    Int                           // Nombre de personnes
  
  // üë§ Informations client
  name      String                        // Nom complet
  phone     String                        // T√©l√©phone (obligatoire)
  email     String?                       // Email (optionnel avec ?)
  message   String?                       // Message particulier (optionnel)
  
  // üìä Statut et gestion
  status    ReservationStatus @default(PENDING)  // Statut par d√©faut
  
  // üïê Timestamps automatiques
  createdAt DateTime @default(now())       // Cr√©√© automatiquement
  updatedAt DateTime @updatedAt            // Mis √† jour automatiquement
  
  @@map("reservations")  // Nom de la table en base
}

// üìã Les diff√©rents statuts possibles
enum ReservationStatus {
  PENDING   // En attente de confirmation
  CONFIRMED // Confirm√©e
  CANCELLED // Annul√©e
  COMPLETED // Termin√©e
  LATE      // En retard (>20min apr√®s l'heure de r√©servation)
}

// ‚è∞ Mod√®le pour g√©rer les cr√©neaux horaires
model TimeSlot {
  id        String  @id @default(cuid())
  time      String  @unique              // "12:00", "12:30", etc.
  maxTables Int     @default(10)         // Nombre max de tables pour ce cr√©neau
  isActive  Boolean @default(true)       // Si le cr√©neau est actif
  
  @@map("time_slots")
}

// üö´ Mod√®le pour bloquer certaines dates (fermetures, √©v√©nements priv√©s)
model BlockedDate {
  id     String   @id @default(cuid())
  date   DateTime @unique               // Date bloqu√©e
  reason String?                       // Raison du blocage (optionnel)
  
  @@map("blocked_dates")
}

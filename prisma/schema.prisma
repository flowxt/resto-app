// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 🍽️ Modèle pour les réservations de restaurant
model Reservation {
  id        String   @id @default(cuid())  // ID unique automatique
  
  // 📅 Informations de réservation
  date      DateTime                       // Date de la réservation
  time      String                         // Heure (ex: "19:30")
  guests    Int                           // Nombre de personnes
  
  // 👤 Informations client
  name      String                        // Nom complet
  phone     String                        // Téléphone (obligatoire)
  email     String?                       // Email (optionnel avec ?)
  message   String?                       // Message particulier (optionnel)
  
  // 📊 Statut et gestion
  status    ReservationStatus @default(PENDING)  // Statut par défaut
  
  // 🕐 Timestamps automatiques
  createdAt DateTime @default(now())       // Créé automatiquement
  updatedAt DateTime @updatedAt            // Mis à jour automatiquement
  
  @@map("reservations")  // Nom de la table en base
}

// 📋 Les différents statuts possibles
enum ReservationStatus {
  PENDING   // En attente de confirmation
  CONFIRMED // Confirmée
  CANCELLED // Annulée
  COMPLETED // Terminée
  LATE      // En retard (>20min après l'heure de réservation)
}

// ⏰ Modèle pour gérer les créneaux horaires
model TimeSlot {
  id        String  @id @default(cuid())
  time      String  @unique              // "12:00", "12:30", etc.
  maxTables Int     @default(10)         // Nombre max de tables pour ce créneau
  isActive  Boolean @default(true)       // Si le créneau est actif
  
  @@map("time_slots")
}

// 🚫 Modèle pour bloquer certaines dates (fermetures, événements privés)
model BlockedDate {
  id     String   @id @default(cuid())
  date   DateTime @unique               // Date bloquée
  reason String?                       // Raison du blocage (optionnel)
  
  @@map("blocked_dates")
}

// 🧀 Modèle pour les commandes de planches click & collect
model CommandePlanche {
  id                   String   @id @default(cuid())
  
  // 👤 Informations client
  name                 String                        // Nom complet
  email                String                        // Email du client
  phone                String                        // Téléphone
  
  // 📅 Informations de récupération
  dateRecuperation     DateTime                      // Date de récupération
  creneauRecuperation  String                        // Créneau horaire (ex: "11h", "14h30")
  
  // 🧀 Informations sur la planche
  plancheId            String                        // ID de la planche commandée
  plancheName          String                        // Nom de la planche
  planchePrice         Float                         // Prix unitaire de la planche
  quantite             Int      @default(1)          // Quantité commandée
  total                Float                         // Prix total de la commande
  
  // 🚨 Informations spéciales
  allergies            String?                       // Allergies du client (optionnel)
  commentaires         String?                       // Commentaires particuliers (optionnel)
  
  // 📊 Statut de la commande
  status               CommandeStatus @default(PENDING)
  
  // 🕐 Timestamps automatiques
  createdAt            DateTime @default(now())      // Créé automatiquement
  updatedAt            DateTime @updatedAt           // Mis à jour automatiquement
  
  @@map("commandes_planches")
}

// 📋 Les différents statuts des commandes de planches
enum CommandeStatus {
  PENDING   // En attente de préparation
  READY     // Prête pour récupération
  COMPLETED // Récupérée par le client
  CANCELLED // Annulée
}
